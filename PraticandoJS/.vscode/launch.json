{
  "version": "0.2.0",
  "configurations": [
    // ðŸŸ¦ C/C++
    {
      "name": "Executar C/C++",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "C:\\TDM-GCC-64\\bin\\gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build"
    },

    // ðŸŸ¨ JavaScript (Node.js)
    {
      "name": "Executar JavaScript",
